package kr.go.mss;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.servlet.http.HttpServletRequest;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;
import kr.go.mss.dto.SampleDTO;



@Controller
@RequestMapping("/api/")
public class RestTest {

	private final Logger log = LoggerFactory.getLogger(RestTest.class);
	
	@GetMapping("api1")
	public String api1() {
		return "api";
	}
	
	@ResponseBody
	@GetMapping("test1")
	public String test1(HttpServletRequest request) {
		log.info("URL Test : "+request.getRequestURL());
		log.info("URI Test : "+request.getRequestURI());
		log.info("JAVA CLASS : "+this.getClass().getName());
		return "application request url";
	}
	
	@ResponseBody
	@GetMapping("test2")
	public String test2(HttpServletRequest request) {
		log.info("URL Test : "+request.getRequestURL());
		log.info("URI Test : "+request.getRequestURI());
		log.info("JAVA CLASS : "+this.getClass().getName());
		return "koin1994";
	}
	
	@ResponseBody
	@GetMapping("test3")
	public String test3(HttpServletRequest request) {
		log.info("URL Test : "+request.getRequestURL());
		log.info("URI Test : "+request.getRequestURI());
		log.info("JAVA CLASS : "+this.getClass().getName());
		return "{koin1994,1234}";
	}
	
	@ResponseBody
	@GetMapping("test4")
	public String test4(HttpServletRequest request) {
		log.info("URL Test : "+request.getRequestURL());
		log.info("URI Test : "+request.getRequestURI());
		log.info("JAVA CLASS : "+this.getClass().getName());
		return "{koin1994,1234}";
	}
	
	@ResponseBody
	@GetMapping("test5")
	public String test5(HttpServletRequest request) {
		log.info("URL Test : "+request.getRequestURL());
		log.info("URI Test : "+request.getRequestURI());
		log.info("JAVA CLASS : "+this.getClass().getName());
		return "{koin1994}";
	}

}

